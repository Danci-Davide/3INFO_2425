#include <stdio.h>

#define DIVISORE 5

int main (){
 int numero,sommaCifre=0,cifra;
 int almenoUnaPari==0;

 printf ("inserisci un numero inteo positivo: ");
 scanf("%d",&numero);
 if (numero<=0){
printf("il numero dev'essere positivoo!\n");
return 1 ;
}
int numeroCorrente=numero;
while(numeroCorrene>0){

cifra =numeroCorrente%10;
sommaCifre+=cifra;
if(cifra%2==0){

almenoUnaPari=1;
}
numeroCorrente /10;
}
if (sommaCifre % DIVISORE ==0 && almenoUnaPari){

printf ("il numero %d è speciale.\n",numero);

}else {
    printf ("il numero %D non è speciale.\n",numero);
}
return 0;
}